<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.label :email, 'Email address', class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'your@email.com', class: 'form-control' %>
    <% resource.errors.full_messages_for(:email).each do |error| %>
        <div class="mt-2 alert alert-danger"><%= error %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: 'form-label' %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    <% resource.errors.full_messages_for(:password).each do |error| %>
        <div class="mt-2 alert alert-danger"><%= error %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: 'form-label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    <% resource.errors.full_messages_for(:password_confirmation).each do |error| %>
        <div class="mt-2 alert alert-danger"><%= error %></div>
    <% end %>
  </div>

  <div class="actions d-grid gap-2">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
    <hr class="my-4">
  </div>
<% end %>