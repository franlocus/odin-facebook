<li>
  <p>
    <%= post.author.email %>
    <br>
    Published -> <%= post.content %> <br>
    Liked by -> <%= post.likes_count.zero? ? 'nobody :(' : pluralize(post.likes_count, 'person') %>

    <% current_user_like = @current_user_likes_posts_ids.find { |_like_id, post_id| post_id == post.id} %>
    <% if current_user_like.nil? %> 
      <%= button_to 'Like', likes_path, params: { like: { post_id: post.id }}, method: :post %>
    <% else %> 
      <%= button_to 'Unlike', like_path(current_user_like), method: :delete %>
    <% end %> 
  </p>
</li>